{
  "compilerOptions": {
    "target": "es6",
    "outDir": "cjs",
    "sourceMap": true,
    "lib": ["ES2021", "dom"],
    "module": "commonjs",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/react.tsx"]
}
