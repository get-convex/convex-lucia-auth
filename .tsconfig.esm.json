{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "esm",
    "sourceMap": true,
    "lib": ["ES2021", "dom"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/react.tsx"]
}
